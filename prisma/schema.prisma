generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -- USER TABLE --
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified Boolean?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]

  favouritedListings UserFavourite[]
  listings Listing[] // User's uploaded listings
  settings UserSettings? // One-to-one relation with user settings

  @@map("users")
}

model Session {
  id        String   @id
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("sessions")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verifications")
}

// -- USER SETTINGS TABLE --
model UserSettings {
  id String @id @default(cuid())
  userId String @unique
  receiveEmailNotifications Boolean @default(true)
  currencyPreference String @default("USD")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

// -- USER FAVOURITE LISTINGS TABLE --
model UserFavourite {
  id String @id @default(cuid())
  createdAt DateTime @default(now())

  // Foreign keys
  userId String
  listingId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId]) // A user can only favourite a listing once
  @@map("user_favourites") 
}

// -- LISTINGS TABLE --
model Listing {
  id            String   @id 
  title         String   // "Modern Downtown Loft"
  description   String?  
  source        String   // e.g., "rightmove", "spareroom", "user-upload"
  originalUrl   String   @unique // The URL you scraped from
  sold        Boolean  @default(false)
  
  // Pricing (store in dollars)
  rentalPrice   Int?     // e.g., 3200 (for $3,200)
  purchasePrice Int?
  deposit       Int?

  // Core Features
  beds          Int
  baths         Int
  area          Int?     // e.g., 85 (for 85 sq meters)
  featured      Boolean  @default(false)
  viewCount     Int      @default(0) // Track how many times the listing has been viewed
  
  // One-to-Many: A Listing has one Location
  locationId    String
  location      Location @relation(fields: [locationId], references: [id])

  // One-to-Many: A Listing has many Images
  images        Image[]

  // Many-to-Many: A Listing has many Amenities
  amenities     Amenity[]

  // Many-to-Many: A Listing can be favourited by many Users
  favouritedBy  UserFavourite[]

  // Many-to-One: A Listing belongs to a User (optional for scraped listings)
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("listings")
}

// -- CITY TABLE --
// Stores city information with hero images for the platform
model City {
  id        String  @id @default(cuid())
  name      String  @unique // "London"
  country   String  // "United Kingdom"
  imageUrl  String  // Hero image URL from Unsplash or other source

  @@map("cities")
}

// -- LOCATIONS --
// Stores the normalized address information.
// This allows you to easily query "all listings in London".
model Location {
  id        String  @id @default(cuid())
  district  String? // "Shoreditch"
  city      String  // "London"
  country   String  // "United Kingdom"

  // A Location can have many listings
  listings  Listing[]

  // Prevent duplicate locations
  @@unique([district, city, country])
  @@map("locations")
}

// -- LISTING IMAGES --
// Stores the image URLs for a listing.
// This is a one-to-many relationship.
model Image {
  id        String @id @default(cuid())
  url       String // "https://photos2.spareroom.co.uk/..."
  altText   String? // Good for accessibility

  // Relation back to the Listing
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@map("images")
}

// -- LISTING AMENITIES --
// Stores the unique amenities.
// This is a many-to-many relationship.
model Amenity {
  id   String @id @default(cuid())
  name String @unique

  // Relation to all listings that have this amenity
  // Prisma will automatically create and manage the hidden
  // "_AmenityToListing" join table for this.
  listings Listing[]

  @@map("amenities")
}

